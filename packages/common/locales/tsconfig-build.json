{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../../dist/packages/common/locales",
    "paths": {
      "@bangular/common": ["../../../dist/packages/common"],
      "@bangular/core": ["../../../dist/packages/core"]
    },
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "skipLibCheck": true,
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "./closure-locale.ts"
  ],
  "bangularCompilerOptions": {
    "skipTemplateCodegen": true,
    "skipMetadataEmit": true
  }
}
